doctype html
html(lang="ru", ng-app)
    head
        title= "Masons mafia admin"
        meta(charset='utf-8', name='viewport', content='width=device-width, initial-scale=1.0')
        link(rel='stylesheet', href='/css/bootstrap.css')
        link(rel='stylesheet', href='/css/datepicker3.css')
        link(rel='stylesheet', href='/css/font-awesome.min.css')
        link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.3.5/bootstrap-select.min.css')
        link(rel='stylesheet', href='/css/app.css')
        script(src='/js/jquery.js', type='text/javascript')
        script(src='/js/moment.js', type='text/javascript')
        script(src='/js/bootstrap-datepicker.js', type='text/javascript')
        script(src='/js/bootstrap-datepicker.ru.js', type='text/javascript')
        script(src='https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.3.5/bootstrap-select.min.js', type='text/javascript')
        script(src='/js/angular.js', type='text/javascript')
        script(src='/js/app_admin.js', type='text/javascript')
    body(ng-controller='adminController')
        include navigation
        div.container
            form
                div.row
                    div.col-sm-3
                        label(for='date') Дата:
                        div#datepicker.input-group.date
                            input#date.form-control(type='text', placeholder='Введите дату..', tabindex='1')
                            span.input-group-addon
                                i.fa.fa-th
                div.row
                    div.col-sm-3
                        span
                            br
                div.row
                    div.col-sm-12
                        label(for='players-table') Игроки:
                        table#players-table.table.table-striped.table-bordered.table-responsive
                            thead
                                tr
                                    th #
                                    th Имя
                                    th Роль
                                    th Фолов
                                    th Лайки
                                    th Лучший игрок
                                    th Доп. Очки
                            tbody
                                tr(ng-repeat='player in players')
                                    td {{player.idx}}
                                    td
                                        input.form-control(type='text', placeholder='Введите имя..', tabindex='{{player.idx}}')
                                    td
                                        select.form-control.selectpicker(name='roles')
                                            option(ng-repeat='role in roles') {{role.name}}


        include footer