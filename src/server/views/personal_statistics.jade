doctype html
html(lang="ru")
    head
        title "Masons mafia club statistics"
        meta(charset='utf-8', name='viewport', content='width=device-width, initial-scale=1.0')
        link(rel='stylesheet', href='/css/bootstrap.min.css')
        link(rel='stylesheet', href='/css/font-awesome.min.css')
        link(rel="stylesheet", href='/css/morris.css')
        link(rel='stylesheet', href='/css/app.css')
        script(src='/js/jquery.min.js', type='text/javascript')
        script(src='/js/bootstrap.min.js', type='text/javascript')
        script(src='/js/typeahead.bundle.min.js', type='text/javascript')
        script(src='/js/moment.min.js', type='text/javascript')
        script(src='/js/ru.js', type='text/javascript')
        script(src="/js/raphael-min.js", type='text/javascript')
        script(src="/js/morris.min.js", type='text/javascript')
        script(src='/js/personal_stat_render.js', type='text/javascript')
        script(src='/js/personal_stat.js', type='text/javascript')
    body
        include navigation
        div.loader
            i.fa.fa-spinner.fa-spin.fa-3x
        div.container.container-fluid
            form.form-inline(role='form').col-sm-12
                div.row
                    div.form-group.player-name
                        input.form-control(type='text', placeholder='Игрок...', tabindex='1', name='player-name')
                    div.form-group
                        input.form-control(type='submit', value='Найти', tabindex='2', name='find-button')
                div.row
                    div.col-sm-3
                        span
                            br
            div.statistics.col-sm-12
                form.form-inline
                    div.row
                        legend Персональная статистика &nbsp
                            span.player-name #{name}
                    div.result-block.row
                        h2 Рейтинг:
                            span &nbsp
                            strong.rating
                            small
                                span &nbsp
                                span в
                                span &nbsp
                                span.games-total
                                span &nbsp
                                span играх
                        div
                            div Среднее:
                                span &nbsp
                                strong.average-rating
                            div Лучшая карта:
                                span &nbsp
                                strong.recommended-card
                            div Точность лучшего хода:
                                span &nbsp
                                strong(data-toggle="tooltip", data-placement="top", title="Среднее количество угадываемых мафов").best-move-accuracy
                            div Выживаемость
                                span &nbsp
                                strong(data-toggle="tooltip", data-placement="top", title="Вероятность пережить первый круг").survival
                    div.row
                        h2 Win–Loss
                            span &nbsp
                                small по игровым вечерам
                        div.efficiency-chart
                            div.graph-container
                                div.caption Разница числа побед и поражений
                        h2 Win-Rates
                            span &nbsp
                                small по ролям
                        div.roles-wins-distribution-chart.col-sm-6
                            div.graph-container
                                div.caption Win rate за каждую роль в %
                        div.commands-wins-distribution-chart.col-sm-6
                            div.graph-container
                                div.caption Баланс линий в %
                        div.winrate-chart.col-sm-4
                            div.graph-container
                                div.caption Win rate в %
                        div.col-sm-8
                            table.table.table-striped.table-hover.table-bordered.table-responsive
                                tr.headers
                                    th #
                                    th.citizen Мирным
                                    th.sherif Шерифом
                                    th.mafia Мафией
                                    th.don Доном
                                    th.total Всего
                                tr
                                    td Побед
                                    td.wins-citizen
                                    td.wins-sheriff
                                    td.wins-mafia
                                    td.wins-don
                                    td.wins-total
                                tr
                                    td Игр
                                    td.games-citizen
                                    td.games-sheriff
                                    td.games-mafia
                                    td.games-don
                                    td.games-total
                                tr
                                    td Лучший игрок
                                    td.best-citizen
                                    td.best-sheriff
                                    td.best-mafia
                                    td.best-don
                                    td.best-total
                                tr
                                    td Лайков
                                    td.likes-citizen
                                    td.likes-sheriff
                                    td.likes-mafia
                                    td.likes-don
                                    td.likes-total
                                tr
                                    td Фолов
                                    td.penalties-citizen
                                    td.penalties-sheriff
                                    td.penalties-mafia
                                    td.penalties-don
                                    td.penalties-total
                                tr
                                    td Застрелен первым
                                    td.first-killed-at-night-citizen
                                    td.first-killed-at-night-sheriff
                                    td.first-killed-at-night-mafia
                                    td.first-killed-at-night-don
                                    td.first-killed-at-night-total
                                tr
                                    td Выведен первым
                                    td.first-killed-at-day-citizen
                                    td.first-killed-at-day-sheriff
                                    td.first-killed-at-day-mafia
                                    td.first-killed-at-day-don
                                    td.first-killed-at-day-total
        include footer